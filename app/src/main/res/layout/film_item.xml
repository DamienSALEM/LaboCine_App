<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/img_film"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_film_item2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:maxWidth="200dp"
        android:background="@color/ModeNuit"
        android:textColor="@color/White"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/tv_film_item3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_film_item2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/ModeNuit"
        android:maxWidth="200dp"
        android:textColor="@color/White"
        android:layout_margin="20dp"/>
    <TextView
        android:id="@+id/tv_film_item4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_film_item3"
        android:background="@color/ModeNuit"
        android:textColor="@color/White"
        android:layout_margin="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>